<domain type='openvz' id='<%= resource=[:name] %>'>
  <name><%= resource=[:name] %></name>
  <memory><%= resource[:memory] %></memory>
  <vcpu><%= resource[:vcpu] %></vcpu>
  <os>
    <type>exe</type>
    <init>/sbin/init</init>
  </os>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>destroy</on_reboot>
  <on_crash>destroy</on_crash>
  <devices>
    <filesystem type='template'>
      <source name='<%= resource[:tmpl_cache] %>'/>
      <target dir='/'/>
    </filesystem>
    <interface type='bridge'>
      <source bridge='<%= resource[:bridge] %>'/>
      <target dev='veth<%= resource[:name] %>.0'/>
    </interface>
  </devices>
</domain>


<domain type='openvz' id='<%= name %>'>
  <name><%= name %></name>
  <memory><%= memory %></memory>
  <vcpu><%= vcpu %></vcpu>
  <os>
    <type>exe</type>
    <init>/sbin/init</init>
  </os>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>destroy</on_reboot>
  <on_crash>destroy</on_crash>
  <devices>
    <filesystem type='template'>
      <source name='<%= tmpl_cache %>'/>
      <target dir='/'/>
    </filesystem>
    <interface type='bridge'>
      <source bridge='br0'/>
      <target dev='veth<%= name %>.0'/>
    </interface>
  </devices>
</domain>

